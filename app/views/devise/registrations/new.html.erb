<h2>Register</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <%= f.input :first_name, required: true,
        label: false, placeholder: "First Name", autofocus: true %>
    <%= f.input :last_name, required: true,
        label: false, placeholder: "Last Name" %>
    <%= f.input :username, required: true,
        label: false, placeholder: "Username" %>
    <%= f.input :email, required: true,
        label: false, placeholder: "Email" %>
    <%= f.input :password, required: true,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        label: false, placeholder: "Choose a password" %>
    <%= f.input :password_confirmation,
        required: true, label: false, placeholder: "Confirm password" %>

    <%= f.button :submit, "Sign up" %>

<% end %>

<%= render "devise/shared/links" %>
